<% if users.any? %>
    <ul class="list-unstyled">
      <% users.each do |user| %>
        <li class="media mt-3">
          <img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
          <div class="media-body">
            <div>
              <p><%= link_to user.name, user_path(user) %></p>
              <p><% user.introdcution%></p>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  <%= paginate users %>
<% end %>

