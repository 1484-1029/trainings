    <div class="text-center">
      <h1>投稿</h1>
    </div>
    
    <div class="col-sm-6 offset-sm-3">
      <%= form_with(model: @micropost, local: true) do |f| %>
        <div class="form-group">
          <%= f.label :title, 'タイトル' %>
          <%= f.text_area :title, class: 'form-control', rows: 1 %>
        </div>
        <div class="form-group">
          <%= f.label :movie, '動画' %>
          <%= f.file_field :movie, class: 'form-control', rows: 10 %>
        </div>
        <div class="form-group">
          <%= f.label :process, '筋トレ手順' %>
          <%= f.text_area :process, class: 'form-control', rows: 10 %>
        </div>
        <div class="form-group">
          <%= f.label :advice, 'アドバイス' %>
          <%= f.text_area :advice, class: 'form-control', rows: 10 %>
        </div>
        <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
      <% end %>
    </div>
